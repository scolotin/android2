<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/detailed_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/filmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/detailed_item_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/metadata"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/metadata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/metadata_text_size"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/detailed_item_margin"
            app:layout_constraintTop_toBottomOf="@id/filmTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/genre"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/genre_text_size"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/detailed_item_margin"
            app:layout_constraintTop_toBottomOf="@+id/metadata"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rate"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/rate_text_size"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/detailed_item_margin"
            app:layout_constraintTop_toBottomOf="@+id/genre"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/description"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/description_text_size"
            android:layout_marginBottom="@dimen/detailed_item_margin"
            app:layout_constraintTop_toBottomOf="@+id/rate"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
